{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Hardhat Test Debug",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["hardhat", "test"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Hardhat Test Debug (Single File)",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["hardhat", "test", "${file}"],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}