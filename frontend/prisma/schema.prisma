// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "sqlite"
}

model Notary {
  id       Int    @id @default(autoincrement())
  username String @unique

  successionPlans SuccessionPlan[]
}

model Testator {
  id        Int    @id @default(autoincrement())
  publicKey String @unique

  successionPlan SuccessionPlan?
}

model SuccessionPlan {
  id                Int       @id @default(autoincrement())
  testatorPublicKey String    @unique
  notaryUsername    String
  status            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  deletedAt         DateTime?

  testator Testator @relation(fields: [testatorPublicKey], references: [publicKey])
  notary   Notary   @relation(fields: [notaryUsername], references: [username])
}
